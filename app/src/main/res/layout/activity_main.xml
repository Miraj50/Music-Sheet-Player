<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.miraj.scannerapp.MainActivity"
    tools:layout_editor_absoluteY="81dp"
    tools:layout_editor_absoluteX="0dp">

    <ImageView
        android:id="@+id/scannedImage"
        android:layout_width="361dp"
        android:layout_height="348dp"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintBottom_toTopOf="@+id/textView"
        app:layout_constraintTop_toBottomOf="@+id/play"
        tools:layout_editor_absoluteY="68dp"
        app:layout_constraintHorizontal_bias="0.517" />

    <Button
        android:id="@+id/scanButton"
        android:layout_width="91dp"
        android:layout_height="48dp"
        android:text="scan"
        app:layout_constraintRight_toLeftOf="@+id/cameraButton"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintBottom_toTopOf="@+id/scannedImage"
        app:layout_constraintTop_toTopOf="parent" />

    <Button
        android:id="@+id/cameraButton"
        android:layout_width="92dp"
        android:layout_height="48dp"
        android:text="camera"
        app:layout_constraintRight_toLeftOf="@+id/mediaButton"
        app:layout_constraintLeft_toRightOf="@+id/scanButton"
        app:layout_constraintBottom_toTopOf="@+id/play"
        app:layout_constraintTop_toTopOf="parent" />

    <Button
        android:id="@+id/mediaButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="media"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintLeft_toRightOf="@+id/cameraButton"
        app:layout_constraintBottom_toTopOf="@+id/scannedImage"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/textView"
        android:layout_width="325dp"
        android:layout_height="108dp"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/scannedImage" />

    <Button
        android:id="@+id/play"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="PLAY"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintBottom_toTopOf="@+id/scannedImage"
        app:layout_constraintTop_toBottomOf="@+id/cameraButton" />

</android.support.constraint.ConstraintLayout>
